<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li><br>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <% form.label :user_id %>
    <% form.text_field :user_id, value: current_user.id%>
  </div>

  <div class="field">
    <%= form.label :semester_id %>
    <%= form.collection_select :semester_id, Semester.where(user_id: current_user.id), :id, :termAndYear,{:include_blank => "Select a semester"}%>
  </div>

  <div class="field">
    <%= form.label :course_name %>
    <%= form.text_field :course_name %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.text_field :department %>
  </div>

  <div class="field">
    <%= form.label :instructor %>
    <%= form.text_field :instructor %>
  </div>

  <div class="field">
    <%= form.label :credits %>
    <%= form.number_field :credits %>
  </div>

  <div class="field">
    <%= form.label :grade %>
    <%= form.select :grade, ['A','A-','B+','B','B-','C+','C','C-','D+','D','D-','F'], :prompt => 'Select a grade'%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
